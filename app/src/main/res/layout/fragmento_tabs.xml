<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:id="@+id/fragment_uno"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>
        <com.example.usuario.ludiuca.widgets.SlidingTabLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slidings_tabs"
            android:layout_gravity="center"></com.example.usuario.ludiuca.widgets.SlidingTabLayout>

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></android.support.v4.view.ViewPager>

    </LinearLayout>

    <!--<fragment android:name="com.example.usuario.ludiuca.fragmentos.FragmentoCambiarAvatar"-->
        <!--android:id="@+id/cambiarAvatarProfe"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

</RelativeLayout>
